<% include header %>

<form action="/" method="post" class="ui form">
    <div class="field">
        <label for="message">Message</label>
        <textarea name="message" id="message"></textarea>
    </div>

    <button type="submit" class="ui blue labeled submit icon button">
        <i class="icon edit"></i>Envoyer
    </button>
</form>

<div class="ui comments">
    <h3 class="ui dividing header"> Commentaires </h3>
    <% for (message of messages) { %>
        <div class="comment">
            <div class="metadata">  <%= moment(message.created_at).fromNow() %></div>
            <a class="avatar" href="/message/<%= message.id %>">
                <img src="https://cdn3.iconfinder.com/data/icons/users-6/100/654853-user-men-2-512.png">
            </a>
            <div class="content">
                <div class="test">
                    <%= message.content %>
                </div>
            </div>
        </div>
    <% } %>
</div>

<% include footer %>

